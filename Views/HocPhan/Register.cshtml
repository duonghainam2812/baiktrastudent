@model test2.Models.HocPhan

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký học phần</title>

    <!-- Thêm Bootstrap từ CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJf3QnBd0JmP4Zh4LNhkITFfgzCz5jcOsxxw+kCTdRPygwOlT5A0wzK6nBxF" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Đăng ký học phần: @Model.TenHp</h1>
        <p class="text-center"><strong>Số tín chỉ:</strong> @Model.SoTinChi</p>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Message
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <input type="hidden" name="maHp" value="@Model.MaHp" />
                <label for="studentId" class="form-label">Mã sinh viên</label>
                <input type="text" class="form-control" name="studentId" id="studentId" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
        </form>
    </div>

    <!-- Thêm Bootstrap JS từ CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqRxFfX6yJ/Zf8diFx9BfGp1ZZl2JyZ2VgdyWXmkmvclG" crossorigin="anonymous"></script>
</body>

</html>
