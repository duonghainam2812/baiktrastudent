@model IEnumerable<test2.Models.SinhVien>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<h1>Danh sách sinh viên</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm sinh viên mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>MSSV</th>
            <th>Họ tên</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Mã ngành</th>
            <th>Hình ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSv</td>
                <td>@item.HoTen</td>
                <td>@item.GioiTinh</td>
                <td>@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                <td>@item.MaNganh</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Hinh))
                    {
                        <img src="@item.Hinh" alt="Hình ảnh" width="100" />
                    }
                    else
                    {
                        <span>Không có hình</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaSv" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaSv" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaSv" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
