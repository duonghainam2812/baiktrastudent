@model test2.Models.SinhVien

@{
    ViewData["Title"] = "Chỉnh sửa thông tin sinh viên";
}

<h1>Chỉnh sửa thông tin sinh viên</h1>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="MaSv" />
    
    <div class="form-group">
        <label for="HoTen">Họ tên</label>
        <input type="text" asp-for="HoTen" class="form-control" required />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="GioiTinh">Giới tính</label>
        <select asp-for="GioiTinh" class="form-control">
            <option value="Nam" >Nam</option>
            <option value="Nữ" >Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NgaySinh">Ngày sinh</label>
        <input type="date" asp-for="NgaySinh" class="form-control" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Hinh">Hình ảnh (Upload mới hoặc để trống để giữ ảnh cũ)</label>
        <input type="file" name="HinhFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Hinh))
        {
            <div>
                <img src="@Model.Hinh" alt="Image" width="100" />
            </div>
        }
        <span asp-validation-for="Hinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="MaNganh">Mã ngành</label>
        <select asp-for="MaNganh" asp-items="ViewBag.MaNganhList" class="form-control">
            <option value="">-- Chọn mã ngành --</option>
            
        </select>
        <span asp-validation-for="MaNganh" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
